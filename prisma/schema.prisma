model GridAsset {
  id        String   @id @default(uuid())
  name      String
  type      String
  status    String
  latitude  Float
  longitude Float
  address   String
  voltage   Int
  load      Float
  capacity  Int
  lastUpdate DateTime @default(now())
  site      String? // New field
  zone      String? // New field
  woreda    String? // New field
  category  String? // New field
  nameLink  String? // New field
}
model User {
  id           String   @id @default(uuid())
  name         String?
  email        String   @unique
  passwordHash String
  role         Role     @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  resetToken        String?   @unique
resetTokenExpiry  DateTime?
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}
